<%-include('include/_header')%>
    <div class="box-nav d-flex justify-between">
        <div class="filter">
            <a href="/pr"><i class="fas fa-angle-double-left"></i> Back</a>
        </div>
    </div>
    <div class="form-title text-center">
        <h2 class="text-dark">Update post</h2>
    </div>
    <form id="update_post" method="POST">
        <div class="new_post">
            <div class="form-group">
                <label for="title" class="text-light">title</label>                    
                <input type="hidden" name="id" value="<%=post._id%>">
                <input type="text" name="title" value="<%=post.title%>" placeholder="enter a title here">
                
                <label for="description" class="text-light">description</label>                    
                <input type="text" name="description" value="<%=post.description%>" placeholder="enter a description here">

                <button type="submit" class="btn text-dark update">Save</button>
            </div>
        </div>
    </form>
<%-include('include/_footer')%>